{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap" : false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck" : true,
    "rootDir": "./frontend/web/src/ts",
    "outDir": "./frontend/web/js/built"
  },
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main"
  ]
}